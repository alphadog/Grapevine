<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.alphadog.grapevine"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Dashboard"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	    <receiver android:name="com.alphadog.grapevine.widgets.GrapevineUpdateProvider" android:label="MyWidget">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/grapevine_update_widget" />
		</receiver>
		<service android:name="com.alphadog.grapevine.services.WidgetUpdateService"/>
	</application>
    <uses-sdk android:minSdkVersion="7" />

</manifest> 