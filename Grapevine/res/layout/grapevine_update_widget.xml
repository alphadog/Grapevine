<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    >
    <ImageView android:id="@+id/button_left"
        android:layout_width="80dip"
        android:layout_height="85dip"
        android:paddingLeft="30dip"
        android:paddingTop="30dip"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/rave"/>
        
    <LinearLayout android:id="@+id/widget_review_info_box"
    	android:orientation="horizontal"
    	android:layout_height="fill_parent"
    	android:layout_width="fill_parent">
    	
		<TextView
			android:id="@+id/widget_text"  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:text="This place really rocks!"
		    android:paddingLeft="7dip"
		    android:textColor="#000000" android:textSize="16sp" android:paddingTop="25dip"/>

		<LinearLayout android:id="@+id/widget_rating_box"
    	android:orientation="vertical"
    	android:layout_height="fill_parent"
    	android:layout_width="fill_parent"
    	android:gravity="right"
    	android:paddingTop="25dip"
    	android:paddingRight="20dip">
		 <ImageView 
		 	android:id="@+id/rating_stars" 
			android:layout_width="15dip"
        	android:layout_height="15dip"
		 	android:src="@drawable/star" />

		 <ImageView 
		 	android:id="@+id/rating_stars" 
			android:layout_width="15dip"
        	android:layout_height="15dip"
		 	android:src="@drawable/star" />

		 <ImageView 
		 	android:id="@+id/rating_stars" 
			android:layout_width="15dip"
        	android:layout_height="15dip"
		 	android:src="@drawable/star" />
		</LinearLayout>
   	</LinearLayout>
    	    
</LinearLayout>
