<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    >
    <ImageView android:id="@+id/button_left"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentLeft="true"
        android:paddingLeft="3dip"
        android:scaleType="centerInside"
        android:clickable="true"
        android:src="@drawable/red_button"/>
        
    <LinearLayout android:id="@+id/widget_review_info_box"
    	android:orientation="vertical"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent">
    	
		<TextView
			android:id="@+id/widget_text"  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:text="The place that I recently went to, was really sucky! and I truly hated it."
		    android:textSize="14sp"
		    android:paddingLeft="5dip"
		    android:paddingTop="3dip"
		 />

		<LinearLayout android:id="@+id/widget_rating_box"
    	android:orientation="horizontal"
    	android:layout_height="fill_parent"
    	android:layout_width="fill_parent">
		 <ImageView 
		 	android:id="@+id/rating_stars" 
		 	android:layout_alignParentLeft="true"
		 	android:layout_marginLeft="5dip"
			android:layout_width="32dip"
        	android:layout_height="32dip"
		 	android:src="@drawable/star" />

		 <ImageView 
		 	android:id="@+id/rating_stars_2" 
		 	android:layout_alignParentLeft="true"
		 	android:layout_marginLeft="5dip"
			android:layout_width="32dip"
        	android:layout_height="32dip"
		 	android:src="@drawable/star" />

		 <ImageView 
		 	android:id="@+id/rating_stars_2" 
		 	android:layout_alignParentLeft="true"
		 	android:layout_marginLeft="5dip"
			android:layout_width="32dip"
        	android:layout_height="32dip"
		 	android:src="@drawable/star" />
		</LinearLayout>
   	</LinearLayout>
    	    
</LinearLayout>
