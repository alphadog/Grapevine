<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
    <LinearLayout android:id="@+id/title_bar_holder"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingBottom="5dip"
    	android:gravity="right"
    	android:background="@drawable/back">
    
    	<ImageView android:id="@+id/new_review"
    	android:src="@drawable/new_review_button"
    	android:layout_height="48dip"
    	android:layout_width="48dip"
    	android:layout_marginRight="20dip"
    	android:layout_marginTop="5dip"
    	/>
    	
    	<ImageView android:id="@+id/map_icon"
    	android:src="@drawable/map_view_button"
    	android:layout_height="48dip"
    	android:layout_width="48dip"
    	android:layout_marginRight="20dip"
    	android:layout_marginTop="5dip"
    	/>
	 		
    	<ImageView android:id="@+id/refresh_icon"
    	android:src="@drawable/refresh_button"
    	android:layout_height="48dip"
    	android:layout_width="48dip"
    	android:layout_marginRight="20dip"
    	android:layout_marginTop="5dip"
    	/> 
    </LinearLayout>
   
    <TextView android:id="@+id/following_tribe"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dip"
              android:layout_marginBottom="2dip"
              android:textStyle="bold"
              />
    
    <ListView android:id="@id/android:list"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:drawSelectorOnTop="false"/>
 
    <TextView android:id="@id/android:empty"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="@string/no_reviews"/>
</LinearLayout>